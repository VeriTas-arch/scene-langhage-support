{
    "name": "computer-graphics-testcases-highlighting",
    "displayName": "Scene Language Support",
    "description": "Syntax highlighting for .scene files used in rendering testcases of computer graphics.",
    "version": "0.2.1",
    "icon": "image/icon.png",
    "publisher": "ovolab-veritas",
    "repository": {
        "type": "git",
        "url": "https://github.com/VeriTas-arch/scene-language-support"
    },
    "license": "BSD 3-Clause",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "scene",
                "aliases": [
                    "Scene",
                    "scene"
                ],
                "extensions": [
                    ".scene"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "scene",
                "scopeName": "source.scene",
                "path": "./syntaxes/scene.tmLanguage.json"
            }
        ],
        "iconThemes": [],
        "configurationDefaults": {
            "material-icon-theme.files.associations": {
                "*.scene": "3d"
            }
        },
        "configuration": {
            "title": "Scene Language Support",
            "properties": {
                "sceneFormatter.indentSize": {
                    "type": "number",
                    "default": 4,
                    "description": "每级缩进的空格数"
                },
                "sceneFormatter.useTabs": {
                    "type": "boolean",
                    "default": false,
                    "description": "是否使用制表符 (tab) 进行缩进"
                }
            }
        },
        "commands": [
            {
                "command": "sceneLanguageSupport.preview3D",
                "title": "3D 预览当前 Scene 文件",
                "icon": "$(open-preview)"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "sceneLanguageSupport.preview3D",
                    "when": "resourceLangId == scene",
                    "group": "navigation"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/node": "^24.0.4",
        "@types/vscode": "^1.101.0",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "three": "^0.177.0",
        "typescript": "^5.8.3",
        "vite": "^7.0.0"
    },
    "main": "./out/extension.js",
    "scripts": {
        "build": "tsc",
        "build:three": "vite build",
        "copy-orbitcontrols": "npx copyfiles -u 4 node_modules/three/examples/jsm/controls/OrbitControls.js media/jsm/",
        "build:3d": "npm run copy-orbitcontrols && npm run build:three"
    }
}
